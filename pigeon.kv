

<ContentGrid>

    sender: sendAddress
    receiver: receiveAddress


    GridLayout:
        cols: 1
        size: root.width - 100, root.height - 70
        pos: 50, 100

        Label:
            text: "Pigeon, your personal Email Bot is listening..."

        GridLayout:
            cols: 2

            Label: 
                text: "Sender address:"
            TextInput: 
                id: sendAddress
                multiline: False

            Label: 
                text: "Receiver address:"
            TextInput: 
                id: receiveAddress
                multiline: False

            Label: 
                text: "Subject: "
            TextInput: 
                multiline: True

            Label: 
                text: "Message: "
            TextInput: 
                multiline: True

    Button: 
        text: "Send"
        on_press: root.btn()
        size: 100, 50
        pos: 350, 5

